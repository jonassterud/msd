{
    "manifest_version": 2,
    "name": "Musescore Downloader",
    "description": "Download PDFs from Musescore.",
    "version": "2.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "background_script.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://musescore.com/*"
            ],
            "js": [
                "libraries/pdfkit.min.js",
                "libraries/blob-stream.min.js",
                "libraries/svg-pdfkit.min.js",
                "content_script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "injected_script.js"
    ],
    "page_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "pageAction/popup.html",
        "default_title": "Musescore Downloader"
    }
}
